        <div class="modal-dialog">
        <div class="loginmodal-container login">
          <h1>Login to Your Account</h1><br>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field">
                <%= f.email_field(:email, placeholder: "Email",  autofocus: true, type: "text") %>
              </div>
               <div class="field">
                <%= f.password_field(:password, placeholder: "Password", autocomplete: "off") %>
              </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

              <div class="actions">
                <%= f.submit "Log in", class: "login loginmodal-submit" %>
              </div>
            <% end %>
       
          
          <div class="login-help">
          <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
      

