<div class="container-fluid">
<% if current_user %>
<div class="row">

	<div class="col-md-8 messages">

		<ul id="conversations-list">
			<% @conversations.each do |conversation| %>
				<%= render 'conversations/conversation', conversation: conversation, user: current_user %>
			<% end %>
		</ul>
	</div>

	<div class="col-md-3 sender-list">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title">User list</h3>
			</div>
			<div class="panel-body">
				<ul>
					<%  @followed.each do |followed| %>
					 <li><%= link_to followed.username, conversations_path(user_id: followed), remote: true, method: :post %></li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
</div>
<% end %>
</div>



