<% if user_signed_in? %>
 <div class="container-fluid ">
      <div class="row fix-padding">
        <!-- left links -->
        <div class="col-md-3 profile-div ">
          <div class="profile-nav ">
            <div class="widget">
              <div class="widget-body">
                <div class="user-heading round">
                	<img src="<%= current_user.avatar.url %>">
                    <h1><%= current_user.username %></h1>
                  <p><%= current_user.fname + " " + current_user.lname %></p>
                </div>

                <ul class="nav nav-pills nav-stacked">
                  <li class="active"><a href="/users/edit"> <i class="fa fa-user"></i>Edit Details</a></li>
                  <li>
                    <a href="/users/inbox/:id"> 
                      <i class="fa fa-envelope"></i> Messages 
                      <span class="label label-info pull-right r-activity"></span>
                    </a>
                  </li>
                  <li><a href="#"> <i class="fa fa-calendar"></i> Events</a></li>
                  <li><a href="#"> <i class="fa fa-image"></i> Photos</a></li>
                  <li><a href="#"> <i class="fa fa-share"></i> Browse</a></li>
                  <li><a href="#"> <i class="fa fa-floppy-o"></i> Saved</a></li>
                </ul>
              </div>
            </div>
          </div>
        </div><!-- end left links -->

		<div class="col-md-5">
			<div class="feed">
			<%= render 'form', post: @post %>
			
			<%  @followed.each do |followed| %>
				<% followed.posts.by_date.each do |post| %>
					
						<div class="panel panel-default">
								<div class="panel-heading">
												<%= image_tag post.user.avatar.url, class: "post-pic" %>
										<div><strong>            
										<div class="text-center">
											<h5><%= link_to "#{User.find(post.user_id).username}", user_path(post.user_id)%></h5>
												<i class="fa fa-calendar"></i><br><h6 class="blog-post-meta"><%= post.created_at.strftime('%Y %b %d') %></h6>
										</div></strong></div>
							 </div>
								<div class="panel-body">
										<blockquote>
											<div class="text-center">
												<p class="blog-post-meta"><%= raw(post.body). truncate(358) %></p>
											</div>
										</blockquote>
								</div>
								<div class="panel-footer">
										<input type="email" class="form-control" placeholder="Write a comment...">
								</div>
						</div>
				 <% end %>
			<% end %>

			</div>
			</div>


			<div class="col-md-3">
			
				 <div class="widget user-listing">
            <div class="widget-header">
              <h3 class="widget-caption">People You May Know</h3>
            </div>
            <div class="widget-body bordered-top bordered-nav">
              <div class="card">
                  <div class="content">
                  	<%  @users.each do |user| %>
                      <ul class="list-unstyled team-members">
                          <li>
                              <div class="row">
                                  <div class="col-xs-3">
                                      <div class="avatar">
                                          <a href="/users/<%= user.id %>"><img src="<%= user.avatar.url %>" class="img-circle img-no-padding img-responsive"></a>
                                      </div>
                                  </div>
                                  <div class="col-xs-6">
                                     <%= user.username %>
                                  </div>
                      
                                  <div class="col-xs-3 text-right">
                                  <% if user.followers.include?(current_user) %>
                                  	<a href="/users/<%= user.id %>/follow/destroy"><btn class="btn btn-sm btn-red btn-icon"><i class="fa fa-minus-square"></i></btn></a>
								 <% else %>
                                  	<a href="/users/<%= user.id %>/follow"><btn class="btn btn-sm btn-azure btn-icon"><i class="fa fa-user-plus"></i></btn></a>
 									
                                  <% end %>
                                  </div>

                              </div>
                          </li>
                      </ul>
                      <% end %>
                  </div>
              </div>          
            </div>
          </div><!-- End people yout may know --> 
        </div><!-- end right posts -->
      </div>
    </div>


			</div>


</div>
</div>


