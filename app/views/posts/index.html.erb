<% if user_signed_in? %>
 
	<div class="row">
		<div class="col-md-3">
		<!-- Profile picture and ETC  -->

		

		<%= image_tag current_user.avatar.url(:medium), class: "profile-pic" %>
		<h2 class="username"><%= current_user.username %></h2>
		<%= link_to 'Edit details', edit_user_registration_path, class: "btn btn-primary edit-details"  %>
			

		

