   <div class="container-fluid padded">
  <h1><%= @user.username %>'s Profile</h1>
  <h3><%= "#{@user.followers.count} followers, #{@user.followed.count} followed." %></h3>
  <% if current_user %>
    <% if @user.followers.include?(current_user) %>
      <h3>You're following this user!</h3>
      <%= link_to "Stop following this user", destroy_user_follow_path %>
    <% else %>
      <%= link_to "Follow this user", user_follow_path %>
    <% end %>
    <% if @feed.empty? %>
      <h2>No posts to display!</h2>
    <% else %>
      <hr>
      <h2>Feed</h2>
      <% @feed.each do |post| %>
        <div class="col-xs-12 text-center">
          <div class="text-center">
            <h4><%= link_to "#{User.find(post.user_id).username}", user_path(post.user_id)%></h4>
            <h6><%= post.created_at.strftime('%Y %b %d') %></h6>
          </div>
          <div>
            <%= raw(post.body).truncate(358) %>
          </div>
          <div class="text-center">
            <%= link_to "READ MORE", post_path(post) %>
          </div>
          <% if current_user == User.find(post.user_id) %>
            <%= link_to "Edit", edit_post_path(post), class: "btn btn-default" %>
            <%= link_to "Delete", post_path(post), class: "btn btn-default", data: {:confirm => "Are you sure?"}, method: :delete %>
          <% end %>
          <hr />
        </div>
      <% end %>
    <% end %>
  <% else %>
    <h2>Log in to see details!</h2>
  <% end %>
</div>

  <%= image_tag @user.avatar.url(:medium) %>

   <% if  @user.stream_username %>
          <div class="stream">
            <iframe
                src="http://player.twitch.tv/?channel=<%= @user.stream_username %>"
                height="500"
                width="700"
                frameborder="0"
                scrolling="no"
                allowfullscreen="true">
            </iframe>
         
            <iframe frameborder="no"
              scrolling="no"
              id="juicetrades"
              src="https://www.twitch.tv/<%= @user.stream_username %>/chat"
              height="500"
              width="400">
            </iframe>
            </div>
    <% else %>
      <h1> There is no stream for this User</h1>      
    <% end %>

