<div class="container">
<div class="col-md-12">
<h1 class="stream-header">Check out all our streamers!</h1>
</div>
<div class="col-md-1">
	
</div>
<div class="col-md-10">
<% @users.each do |user| %>
		<div class="stream-block">
						
						<iframe
								src="https://player.twitch.tv/?channel=<%= user.stream_username %>"
								height="300"
								width="400"
								frameborder="0"
								scrolling="no"
								allowfullscreen="true">
						</iframe>
						
						<a href="/users/<%= user.id %>"><h3>Go to <%= user.username %> profile.
						</h3> </a>
		</div>  

<% end %>
</div>
<div class="col-md-1">
	
</div>
</div>
</div>
</div>